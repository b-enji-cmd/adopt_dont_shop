<%= form_with model: @pet ,url: pets_path, local: true do |pet_form| %>
  <%= "Image" %>
  <%= pet_form.text_field :image %><br>
  <%= "Name" %>
  <%= pet_form.text_field :name %><br>
  <%= "Description" %>
  <%= pet_form.text_field :description %><br>
  <%= "Approximate Age" %>
  <%= pet_form.number_field :approximate_age %><br>
  <%= "Sex" %>
  <%= pet_form.text_field :sex %><br>
  <%= pet_form.hidden_field :shelter_id, value: @shelter.id %><br>

  <%= pet_form.submit %>
<% end %>




